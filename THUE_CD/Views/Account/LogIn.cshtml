@model THUE_CD.Models.Accounts

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LogIn</h2>

<div>
    @using (Html.BeginForm())
    {
        <h3>Login</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                @Html.Label("Tên Tài Khoản:", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>           
            <div class="col-md-6">
                @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.Label("Mật Khẩu:", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    }
</div>