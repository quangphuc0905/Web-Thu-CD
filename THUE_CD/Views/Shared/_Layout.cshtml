    <script>
        // Hàm lấy Cookie
        function getCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1);
                if (c.indexOf(name) == 0) return c.substring(name.length, c.length);
            }
            return "";
        }
        function OpenLoginForm1() {
            $("#MyModalLogin").modal('show');
        }
        function CheckLoin() {
            var tk = getCookie("Cookies");
            tk = tk.slice(7, tk.length);
            var Data = "";
            if (tk == "") {
                document.getElementById("btnLoginLayout").hidden = false;
                document.getElementById("clLoginLayout").hidden = true;
            }
            else {
                document.getElementById("tkname").innerHTML = tk;
                document.getElementById("tknames").innerHTML = tk;
                document.getElementById("btnLoginLayout").hidden = true;
                document.getElementById("clLoginLayout").hidden = false;
            }
        }

        $(document).ready(function () {
            CheckLoin();
            Thongbao();
        });
        function Login() {
            var acname = document.getElementById('acname').value;
            var pw = document.getElementById('pw').value;
            if (acname == '' || pw == '') {
                alert('Vui lòng điền thông tin đăng nhập!!!');
            }
            else {
                $.ajax({
                    type: 'post',
                    url: "/Account/LogInModal?AcName=" + acname + '&Password=' + pw,
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success:
                    function (kq) {
                        var obj = JSON.parse(kq);
                        if (obj == 1) {
                            CheckLoin();
                        }
                        else
                            alert('Sai thông tin đăng nhập');

                    },
                    error: function () { alert(""); }
                });
            }

        }
        function Logout() {
            $.ajax({
                type: 'Get',
                url: "/Account/LogOutModal",
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                success:
                function (kq) {
                    var obj = JSON.parse(kq);
                    CheckLoin();
                },
                error: function () { alert(""); }
            });
        }
        function Thongbao() {
            $.ajax({
                type: 'Get',
                url: "/Reservations/Num",
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                success:
                function (kq) {
                    if (kq == 0) {
                        document.getElementById('iconthongbao').hidden = true;
                    } else {
                        document.getElementById('iconthongbao').innerHTML = kq;
                        document.getElementById('iconthongbao').hidden = false;
                    }


                },
                error: function () { alert(""); }
            });
        }

        function ReportKH() {
